@using App.Domain.Enum
@model WebApp.Areas.Admin.ViewModels.QuizVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Quiz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quiz!.QuizType" class="control-label"></label>
                <select asp-for="Quiz!.QuizType" class="form-control" asp-items="Html.GetEnumSelectList<QuizType>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Quiz!.QuizType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz!.Title" class="control-label"></label>
                <input asp-for="Quiz!.Title" class="form-control" />
                <span asp-validation-for="Quiz!.Title" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Quiz!.IsPublic" /> @Html.DisplayNameFor(model => model.Quiz!.IsPublic)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quiz!.Subjects"></label>
                <select multiple="multiple" asp-for="SelectedSubjects" class="form-control"
                        asp-items="Model.Subjects">
                </select>
                <span asp-validation-for="Quiz!.Subjects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quiz!.Questions"></label>
                <select multiple="multiple" asp-for="SelectedQuestions" class="form-control"
                        asp-items="Model.Questions">
                </select>
                <span asp-validation-for="Quiz!.Questions" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
