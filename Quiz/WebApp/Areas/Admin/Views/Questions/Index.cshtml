@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebApp.Areas.Admin.ViewModels.QuestionVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question!.Subjects)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question!.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question!.Text)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
           @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question!.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question!.Text)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Question!.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Question!.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Question!.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
